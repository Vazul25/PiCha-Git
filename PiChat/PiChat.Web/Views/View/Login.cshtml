<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <section class="md-whiteframe-z1">
            <md-toolbar class="md-primary">
                <div class="md-toolbar-tools">
                    <h3>{{'log' | translate}}</h3>
                    <span flex="" class="flex"></span>
                    <language-select></language-select>
                </div>
            </md-toolbar>
            <div>
                <md-content layout-padding>
                    <form name="loginForm">
                        <md-input-container class="md-block">
                            <label>Email</label>
                            <md-icon>email</md-icon>
                            <input required type="email" name="email" ng-model="loginCtrl.email" ng-pattern="/^.+&#64;.+\..+$/" style="max-width: none; width: 100%;" my-enter="loginCtrl.login()" />
                            <div ng-messages="loginForm.email.$error" role="alert">
                                <div ng-message-exp="['required', 'pattern']">
                                    {{'val1' | translate}}
                                </div>
                            </div>
                        </md-input-container>
                        <md-input-container class="md-block">
                            <label>{{'pass' | translate}}</label>
                            <md-icon>vpn_key</md-icon>
                            <input type="password" required name="password" ng-model="loginCtrl.password" style="max-width: none; width: 100%;" my-enter="loginCtrl.login()">
                            <div ng-messages="loginForm.password.$error">
                                <div ng-message="required">{{'treq' | translate}}</div>
                            </div>
                        </md-input-container>
                        <md-input-container class="md-block" style="margin-top: 0px; text-align: center;">
                            <md-button class="md-raised md-primary" style="width: 250px;" ng-click="loginCtrl.login()">
                                <span class="glyphicon glyphicon-log-in"></span> {{'log' | translate}}
                            </md-button>
                            <p ng-show="loginCtrl.badLogin" class="errorMessage md-body-1">{{'val2' | translate}}</p>
                        </md-input-container>
                    </form>
                    <md-divider></md-divider>
                    <md-input-container class="md-block" style="margin: 0;text-align: center;">
                        <md-button md-no-ink class="md-primary" style="text-transform: none;" ng-link="['Register']">{{'logmsg' | translate}}</md-button>
                    </md-input-container>
                </md-content>
            </div>
        </section>
    </div>
</div>